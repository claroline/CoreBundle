<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4>{{ "Add a link" | trans({}, "home") }}</h4>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label class="control-label">{{ "Link address" | trans({}, "home") }}:</label>
                <input type="text" class="form-control">
            </div>
            <hr>
            <div class="alert alert-info">{{ "Note that you can add a link simply by pasting on the content body" | trans({}, "home") }}.</div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-default" data-dismiss="modal">{{ "Cancel" | trans({}, "home") }}</button>
            <button class="btn btn-primary">{{ "Add a link" | trans({}, "home") }}</button>
        </div>
    </div>
</div>
