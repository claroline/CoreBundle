<div class="content-6">
    <div class="alert alert-default" data-name="{{ type.name }}" data-id="{{ type.id }}" style="position:relative">
        {% if type.name != 'home' and type.name != 'menu' %}
            <div class="dropdown float-right-top">
                <button class="btn btn-link dropdown-toggle" type="button" data-toggle="dropdown">
                    <i class="fa fa-chevron-down"></i>
                </button>
                <ul class="dropdown-menu pull-right" role="menu">
                    <li role="presentation">
                        <a class="pointer-hand type-rename" role="menuitem">
                            <i class="fa fa-fw fa-pencil"></i>
                            {{ 'rename' | trans({}, 'platform') }}
                        </a>
                    </li>
                    
                    {% if hasCustomTemplates is defined and hasCustomTemplates %}
                        <li role="presentation">
                            <a class="pointer-hand type-template" role="menuitem">
                                <i class="fa fa-fw fa-eye"></i>
                                {{ 'select_a_template' | trans({}, 'platform') }}
                            </a>
                        </li>
                    {% endif %}
                    <li role="presentation">
                        <a class="pointer-hand type-publish" role="menuitem">
                            <i class="fa fa-fw fa-globe"></i>
                            <span>
                                {% if type.publish %}
                                    {{ "unpublish" | trans({}, 'platform') }}
                                {% else %}
                                    {{ "to_publish" | trans({}, 'platform') }}
                                {% endif %}
                            </span>
                        </a>
                    </li>
                    <li role="presentation">
                        <a class="pointer-hand type-delete" role="menuitem">
                            <i class="fa fa-fw fa-trash-o"></i>
                            {{ 'delete' | trans({}, 'platform') }}
                        </a>
                    </li>
                </ul>
            </div>
        {% endif %}
        <strong>
            <a class="alert-link" href="{{ ("type/" ~ type.name) | homeLink }}">{{ type.name }}</a>
            <div class="text-muted">
                {% if type.publish %}
                    <i class="fa fa-fw fa-circle text-success"></i><span>{{ "publish" | trans({}, 'platform') }}</span>
                {% else %}
                    <i class="fa fa-fw fa-circle text-danger"></i><span>{{ "unpublished" | trans({}, 'platform') }}</span>
                {% endif %}
            </div>
        </strong>
    </div>
</div>
