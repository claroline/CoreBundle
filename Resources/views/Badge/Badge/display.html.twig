<ul class="nodes badge_list list-unstyled">
    {% for badge in pager.currentPageResults %}
    <li class="node-thumbnail node">
        <a href="{{ path(badgeUrl, {'id': badge.id}) }}" title="{{ badge.name(language) }}" class="thumbnail">
            <img class="badge_image" src="{{ asset(badge.webPath) }}" alt="{{ badge.name(language) }}" />
            <span class="node-name">{{ badge.name(language) }}</span>
        </a>
    </li>
    {% else %}
    <li>{{ 'no_badges'|trans({}, 'badge') }}</li>
    {% endfor %}
</ul>

{% if pager.haveToPaginate %}
{{
    pagerfanta(
        pager,
        'twitter_bootstrap_translated',
        {
            'proximity' : 1,
            'routeName': paginationurl,
            'routeParams': routeParams
        }
    )
}}
{% endif %}
