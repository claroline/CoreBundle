{% set layout = "ClarolineCoreBundle:Workspace:layout.html.twig" %}

{% if isDesktop() %}
    {% set layout = "ClarolineCoreBundle:Desktop:layout.html.twig" %}
{% endif %}

{% extends layout %}

{% block section_content %}
    <div class="panel-heading">
        <h3 class="panel-title">{{ _resource.getResourceNode().getName() }}</h3>
    </div>
    <div class="panel-body" id="text_content">
        {{ text|raw }}
    </div>
    <div class="panel-footer">
        <a class="btn btn-default" href="{{ _path('claro_text_history', {'text': _resource.getId()}) }}">{{ 'history' | trans({}, 'platform') }}</a>
        {% if isEditGranted %}
            <a class="btn btn-primary" href="{{ _path('claro_text_edit_form', {'text': _resource.getId()}) }}">{{ 'edit' | trans({}, 'platform') }}</a>
        {% endif %}
    </div>
{% endblock %}
